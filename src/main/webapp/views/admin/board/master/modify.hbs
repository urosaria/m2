<!DOCTYPE HTML>
<html>
<head>
    <title>M2 관리자</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap core CSS-->
    <link href="/css/bootstrap/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="/css/bootstrap/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="/css/bootstrap/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/css/bootstrap/sb-admin.css" rel="stylesheet">
    <script src="/js/handlebars/handlebars-v4.0.11.js"></script>
    <script type="text/javascript">
        function boardMasterRemove(id){
            if(confirm("삭제하시겠습니까?")){
                $.get( "/admin/board/master/remove/"+id, function( data ) {
                    if(data=='success'){
                        alert("삭제되었습니다");
                        location.href="/admin/board/master/list";
                    }
                });
            }
        }
    </script>
</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">

{{> admin/common/nav}}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">게시판 수정</div>
            <div class="card-body">
                {{#boardMaster}}
                    <form name="boardMasterForm" method="post" action="/admin/board/master/modify/{{id}}">
                        <div class="form-group">
                            <label for="name">게시판명</label>
                            <input class="form-control" id="name" name="name" type="text" placeholder="게시판명" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label for="replyYn">답글여부</label>
                                    <br />
                                    <input type="radio" id="replyYn" name="replyYn" value="Y" aria-label="Radio button for following text input"> 답글
                                    <input type="radio" name="replyYn" value="N"  aria-label="Radio button for following text input"> 공지형
                                </div>
                                <!--<div class="col-md-6">
                                    ADMIN <input type="checkbox" name="roles" value="ADMIN"/> |
                                    USER  <input type="checkbox" name="roles" value="USER" />
                                </div>-->
                            </div>
                        </div>

                        <div style="text-align: center">
                            <input type="submit" value="수정" class="btn btn-primary" />
                            <button type="button" class="btn btn-primary" onclick="boardMasterRemove({{id}})">삭제</button>
                            <a class="btn btn-primary" href="/admin/board/master/list" role="button">목록</a>
                        </div>
                    </form>
                {{/boardMaster}}
            </div>
        </div>
    </div>
</div>

{{> admin/common/footer}}

</body>
</html>
