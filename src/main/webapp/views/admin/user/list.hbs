            <div style="text-align: right;width: 100%; padding-bottom: 5px"><a class="btn btn-primary" href="/admin/user/register" role="button">등록</a></div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>이름(ID)</th>
                    <th>메일</th>
