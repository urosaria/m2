                    <th>상태</th>
                    <th>가입일</th>
                </tr>
                </thead>
                <tbody>
                    {{#each userList}}
                    <tr>
                        <td><a href="/admin/user/modify/{{num}}">{{name}} ({{id}})</a></td>
                        <td>{{email}} </td>
                        <td>{{phone}}</td>
                        <td>{{agreeYn}}</td>
                        <td>{{status}}</td>
                        <td>{{createDate}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
